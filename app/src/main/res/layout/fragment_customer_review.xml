<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".CustomerReviewFragment">

    <TextView
        android:id="@+id/tv_customer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Customer Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_customer_name_label"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/tv_customer_address_label"
        android:hint="Customer Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_customer_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_customer_name_label"
        android:text="Customer Address"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_customer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_customer_address_label"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/tv_customer_address_label"
        android:hint="Customer Address"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_customer_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_customer_address_label"
        android:text="Customer Email"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_customer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_customer_email_label"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/tv_customer_address_label"
        android:hint="Customer Email"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_select_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_customer_email_label"
        android:text="Select Customer" />

    <Button
        android:id="@+id/btn_test_shit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_select_customer"
        android:text="Test shit" />
    

</RelativeLayout>